{
  "name": "verana-io-codex-site",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "build": "hugo -d public",
    "dev": "concurrently \"npm:watch:css\" \"hugo server -D\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "postcss-cli": "^11.0.0",
    "concurrently": "^9.0.1",
    "tailwindcss": "^3.4.10",
    "@tailwindcss/typography": "^0.5.15"
  }
}
